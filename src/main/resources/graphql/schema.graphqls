type Book {
    id: ID!
    title: String
    pages: Int
    rating: Rating
    author: Author
}

type Rating {
    rating: String
    star: String
}

type Author {
    id: ID!
    firstName: String
    lastName: String
    books: [Book]
}

type Query {
    allBooks: [Book]
    findOne(id: ID!): Book
    authors: [Author]
    authorById(id: ID!): Author
}

type Mutation {
    addBook(book: BookInput): Book
}

input BookInput {
    title: String
    pages: Int
    authorId: ID!

}


